<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.edu.pwr.rubenvg.currencyconverter">

    <uses-permission
        android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreenActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".GraphActivity"
            android:screenOrientation="landscape">
        </activity>


        <activity
            android:name=".MasterDetail.ItemListActivity"
            android:label="Currencies"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>

        <activity
            android:name=".MasterDetail.ItemDetailActivity"
            android:label=""
            android:parentActivityName=".MasterDetail.ItemListActivity"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>

    </application>

</manifest>